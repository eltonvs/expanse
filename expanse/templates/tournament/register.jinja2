{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <form accept-charset="utf-8" method="POST" action="{{ request.current_route_url() }}">
    <select name="game">
      {% for game in games %}
        <option value="{{game['_id']}}">{{ game['name'] }}</option>
      {% endfor %}
    </select>
    <input type="text" name="name" placeholder="Name" />
    <select name="type">
      <option value="-1" disabled selected>Tournament Type</option>
      <option value="0">Round Robin</option>
      <option value="1">Knockout</option>
      <option value="2">Group</option>
    </select>
    <select name="match_type">
      <option value="-1" disabled selected>Best of ...</option>
      <option value="0">Best of 1</option>
      <option value="1">Best of 3</option>
      <option value="2">Best of 5</option>
    </select>
    {# <select name="status">
      <option value="-1" disabled selected>Tournament Status</option>
      <option value="0">Opened</option>
      <option value="1">Running</option>
      <option value="2">Finished</option>
    </select> #}
    <input type="submit" name="register">
  </form>
</div>
{% endblock content %}
